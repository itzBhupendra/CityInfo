using Microsoft.Extensions.Logging;

public class CustomLoggerProvider : ILoggerProvider
{
    private readonly ILoggerFactory _loggerFactory;

    public CustomLoggerProvider(ILoggerFactory loggerFactory)
    {
        _loggerFactory = loggerFactory;
    }

    public ILogger CreateLogger(string categoryName)
    {
        // Return different logger instances based on the asked value
        if (categoryName == "Database")
        {
            return new DatabaseLogger(_loggerFactory.CreateLogger("Database"));
        }
        else if (categoryName == "File")
        {
            return new FileLogger(_loggerFactory.CreateLogger("File"));
        }
        else
        {
            // Return a default logger instance if no specific category is matched
            return _loggerFactory.CreateLogger(categoryName);
        }
    }

    public void Dispose()
    {
        // Dispose any resources if needed
    }
}
