using Microsoft.AspNetCore.Builder;
using Microsoft.Extensions.DependencyInjection;
using Microsoft.Extensions.Hosting;
using Microsoft.Extensions.Configuration;
using System;

var builder = WebApplication.CreateBuilder(args);

// Add services to the container.
builder.Services.AddControllers();

// Add environment-specific configuration
builder.Configuration
    .AddJsonFile("appsettings.json", optional: false, reloadOnChange: true)
    .AddJsonFile($"appsettings.{builder.Environment.EnvironmentName}.json", optional: true, reloadOnChange: true);

// Check if ASPNETCORE_ENVIRONMENT variable is set
var environment = builder.Configuration["ASPNETCORE_ENVIRONMENT"];
if (string.IsNullOrEmpty(environment))
{
    Console.WriteLine("ASPNETCORE_ENVIRONMENT is not set.");
}
else
{
    Console.WriteLine($"ASPNETCORE_ENVIRONMENT is set to: {environment}");
}

var app = builder.Build();

// Configure the HTTP request pipeline.
if (app.Environment.IsDevelopment())
{
    app.UseDeveloperExceptionPage();
}

app.UseHttpsRedirection();
app.UseAuthorization();
app.MapControllers();

app.Run();
