var customerData = data.GroupBy(ca => ca.CustomerId)
                                   .Select(group => new CustomerWithAddress
                                   {
                                       Customer = new Customer { Id = group.Key, Name = group.First().CustomerName },
                                       Address = new Address { Id = group.First().AddressId, CustomerId = group.Key, Street = group.First().Street }
                                   })
                                   .ToList();
