public static class ApiHelper
{
    private static readonly HttpClient _client = new();

    public static async Task<List<CorrelationIdItem>> GetCorrelationIdsWithSystemException()
    {
        var response = await _client.GetAsync("http://your-api-url/correlation-ids");
        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadAsAsync<List<string>>();
            return result.Select(id => new CorrelationIdItem { CorrelationId = id }).ToList();
        }
        return new List<CorrelationIdItem>();
    }

    public static async Task<List<LogEntry>> GetLogs(string correlationId)
    {
        var response = await _client.GetAsync($"http://your-api-url/logs/{correlationId}");
        if (response.IsSuccessStatusCode)
        {
            var apiResponse = await response.Content.ReadAsAsync<ApiResponse<List<LogEntry>>>();
            return apiResponse.Result;
        }
        return new List<LogEntry>();
    }
}

public class ApiResponse<T>
{
    public bool IsSuccess { get; set; }
    public T Result { get; set; }
}
