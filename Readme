SELECT 
    policy,

    -- Min Date
    CASE 
        WHEN extradate1 <= extradate2 AND extradate1 <= extradate3 THEN extradate1
        WHEN extradate2 <= extradate1 AND extradate2 <= extradate3 THEN extradate2
        ELSE extradate3
    END AS min_date,

    -- Mid Date
    CASE
        WHEN (extradate1 <= extradate2 AND extradate1 >= extradate3) OR (extradate1 >= extradate2 AND extradate1 <= extradate3) THEN extradate1
        WHEN (extradate2 <= extradate1 AND extradate2 >= extradate3) OR (extradate2 >= extradate1 AND extradate2 <= extradate3) THEN extradate2
        ELSE extradate3
    END AS mid_date,

    -- Max Date
    CASE 
        WHEN extradate1 >= extradate2 AND extradate1 >= extradate3 THEN extradate1
        WHEN extradate2 >= extradate1 AND extradate2 >= extradate3 THEN extradate2
        ELSE extradate3
    END AS max_date,

    -- Min Amount corresponding to Min Date
    CASE 
        WHEN extradate1 <= extradate2 AND extradate1 <= extradate3 THEN extraamount1
        WHEN extradate2 <= extradate1 AND extradate2 <= extradate3 THEN extraamount2
        ELSE extraamount3
    END AS min_amount,

    -- Mid Amount corresponding to Mid Date
    CASE
        WHEN (extradate1 <= extradate2 AND extradate1 >= extradate3) OR (extradate1 >= extradate2 AND extradate1 <= extradate3) THEN extraamount1
        WHEN (extradate2 <= extradate1 AND extradate2 >= extradate3) OR (extradate2 >= extradate1 AND extradate2 <= extradate3) THEN extraamount2
        ELSE extraamount3
    END AS mid_amount,

    -- Max Amount corresponding to Max Date
    CASE 
        WHEN extradate1 >= extradate2 AND extradate1 >= extradate3 THEN extraamount1
        WHEN extradate2 >= extradate1 AND extradate2 >= extradate3 THEN extraamount2
        ELSE extraamount3
    END AS max_amount

FROM your_table
WHERE policy = 'your_policy_number';
